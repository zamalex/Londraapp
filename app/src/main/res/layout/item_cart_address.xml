    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/rd_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:background="@drawable/edt_shape_grey"
        android:button="@null"
        android:checked="true"
        android:drawableEnd="@drawable/radio_selector"
        android:drawablePadding="@dimen/margin10"
        android:padding="@dimen/margin10"
        android:text="المنزل\n هذا النص هو مثال لنص يمكن أن يستبدل في نفس المساحة، لقد تم توليد هذا النص من مولد النص العربى"
