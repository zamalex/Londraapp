<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/margin5"
    android:layout_margin="@dimen/margin5"
    app:cardBackgroundColor="@color/colorGrey"
    app:cardCornerRadius="@dimen/margin2"
    android:layout_width="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:padding="@dimen/margin20"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_notification_dot"
        android:layout_width="@dimen/margin10"
        android:layout_height="@dimen/margin10"
        android:src="@drawable/ic_dot_accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txt_notification_title"
        app:layout_constraintTop_toTopOf="@id/txt_notification_title" />

    <TextView
        android:id="@+id/txt_notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin12"
        android:text="اكتشف عروض لندرا لعام 2020"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent" />
     <TextView
        android:id="@+id/txt_notification_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin10"
         android:text="7 يونيو 2020, 14:30"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@id/txt_notification_title"
        android:textColor="@color/colorGreyBlack"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>