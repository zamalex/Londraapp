<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin5"
    android:padding="@dimen/margin10">

    <ImageView
        android:id="@+id/img_my_favourites"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/mask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".45" />

    <TextView
        android:id="@+id/txt_my_favourites_piece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin15"
        android:text="اسم القطعة"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font20"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/img_my_favourites"
        app:layout_constraintTop_toTopOf="@id/img_my_favourites" />

    <TextView
        android:id="@+id/txt_my_favourites_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin30"
        android:layout_marginEnd="@dimen/margin15"
        android:text="اسم البراند"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font20"
        app:layout_constraintEnd_toStartOf="@+id/img_my_favourites"
        app:layout_constraintTop_toBottomOf="@id/txt_my_favourites_piece" />

    <TextView
        android:id="@+id/txt_my_favourites_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin30"
        android:layout_marginEnd="@dimen/margin15"
        android:text=""
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/font20"
        app:layout_constraintEnd_toStartOf="@+id/img_my_favourites"
        app:layout_constraintTop_toBottomOf="@id/txt_my_favourites_brand" />

    <TextView
        android:id="@+id/txt_my_favourites_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin30"
        android:layout_marginEnd="@dimen/margin15"
        android:layout_marginBottom="@dimen/margin15"
        android:text="24 ريال"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_my_favourites"
        app:layout_constraintTop_toBottomOf="@id/txt_my_favourites_color" />

    <ImageView
        android:id="@+id/add_to_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin5"
        android:padding="@dimen/margin5"
        android:src="@drawable/ic_favorite"
        app:layout_constraintBottom_toBottomOf="@id/txt_my_favourites_piece"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>