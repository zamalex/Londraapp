<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin10"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/img_piece"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin200"
        android:src="@drawable/ic_mask"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_piece_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:text="اسم القطعة"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_piece" />

    <ImageView
        android:id="@+id/img_add_to_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin5"
        android:padding="@dimen/margin10"
        android:src="@drawable/ic_un_favorite"
        app:layout_constraintStart_toStartOf="@id/img_piece"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_piece_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:text="24 ريال"
        android:textSize="@dimen/font18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_piece_name" />

</androidx.constraintlayout.widget.ConstraintLayout>